#!/usr/bin/env ruby

require 'rubygems' unless defined?(Gem)
require 'beaker-answers'

VERSION_STRING =
  "
                                   _ .--.
                                  ( `    )
          beaker-answers       .-'      `--,
                    _..----.. (             )`-.
                  .'_|` _|` _|(  .__,           )
                 /_|  _|  _|  _(        (_,  .-'
                ;|  _|  _|  _|  '-'__,--'`--'
                | _|  _|  _|  _| |
            _   ||  _|  _|  _|  _| %s
          _( `--.\\_|  _|  _|  _|/
       .-'       )--,|  _|  _|.`
      (__, (_      ) )_|  _| /
        `-.__.\\ _,--'\\|__|__/
                      ;____;
                       \\YT/
                        ||
                       |\"\"|
                       '=='
  Supports: %s
  ".freeze

versions = BeakerAnswers::Answers.supported_versions.map(&:to_s).join(', ')
puts format(VERSION_STRING, BeakerAnswers::Version::STRING, versions)

exit 0
